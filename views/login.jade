extends ./layoutPublic.jade
block cotenido
    +column(3,3,2,"bd-sidebar")
    +column(6,6,8,"bd-content")
        form(action="/sessions", method="post")
            div(class="form-group")
                label(for="email") Email
                input(type="email", id="email", name="email" , placeholder="example@empresa.com" class="form-control")
            div
                label(for="password") Contraseña
                input(type="password", id="password" name="password" , placeholder="Contraseña" class="form-control") 
            div
                input(type="submit" value="Ingresar" class="btn btn-info")    
    +column(3,3,2,"bd-sidebar")            