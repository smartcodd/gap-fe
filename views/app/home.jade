extends ../layout.jade
block contenido
    .container(id="container")
        .row    
            +column(2,2,1,"bd-sidebar")
            +column(8,8,10,"bd-sidebar")
                if imagenes
                    div( id="carouselExampleControls" class="carousel slide" data-ride="carousel" )
                        ol( class="carousel-indicators")
                            each imagen, i in imagenes
                                if i==0
                                    li( data-target="#carouselExampleControls" data-slide-to="#{i}" class="active")
                                else
                                    li( data-target="#carouselExampleControls" data-slide-to="#{i}" )
                            
                        div( class="carousel-inner" )
                            each imagen, i in imagenes
                                if i==0
                                    div( class="carousel-item active" )
                                        img(  src="/docs/imagenes/#{imagen._id}.#{imagen.extension}" alt="First slide"  class="img-responsive")
                                        div( class="carousel-caption d-none d-md-block")
                                            h2 #{imagen.titulo}
                                            p por #{imagen.creator.email}
                                else
                                    div( class="carousel-item" )
                                        img(  src="/docs/imagenes/#{imagen._id}.#{imagen.extension}" alt="First slide"   class="img-responsive")
                                        div( class="carousel-caption d-none d-md-block")
                                            h2 #{imagen.titulo}
                                            p por #{imagen.creator.email}

                        a( class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev")
                            span( class="carousel-control-prev-icon" aria-hidden="true")
                            span( class="sr-only") Previous
                        
                        a( class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next")
                            span( class="carousel-control-next-icon" aria-hidden="true")
                            span( class="sr-only") Next
            +column(2,2,1,"bd-sidebar")
    script(id="image-template" type="text/x-handlebars-template" src="/docs/js/client.js")    
         div(class="img-container")
            a(href="/app/imagenes/{{id}}")
                h2 {{titulo}}
            img(src="/docs/imagenes/{{id}}.{{extension}}", class="img-thumbnail")
            p por {{creator.email}} 