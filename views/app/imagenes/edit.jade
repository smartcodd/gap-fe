extends ../../layout.jade
block contenido
    div(class="col-md-8 remove-float center-block  big-top-space")
        
        form(action="/app/imagenes/#{imagen._id}?_method=PUT", method="post")
            input(type="hidden",value="PUT",name="_method")
            h1 Subir Nueva Imagen
            div(class="form-group")
                label(for="title") Titulo
                input(type="text", id="title", name="title" , placeholder="Titulo de la imagen" class="form-control" value="#{imagen.titulo}")
            div
                input(type="submit" value="Guardar" class="btn btn-info")    
                